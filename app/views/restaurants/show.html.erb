<div class="container center">
  <h1>Restaurant</h1>
  <div class="border">
    <h3><%= @restaurant.name %></h3>
    <p><%= @restaurant.category %></p>
    <p><%= @restaurant.address %></p>
    <p><%= @restaurant.phone_number %></p>
  </div>
  <h1>Reviews</h1>
  <% @restaurant.reviews.each do |review| %>
    <div class="border">
      <p><%= review.rating %></p>
      <p><%= review.content %></p>
    </div>
  <% end %>
  <div>
    <h1>New Review</h1>
    <div class="border">
      <%= simple_form_for [@restaurant, @restaurant.reviews.new] do |f| %>
        <%= f.input :rating %>
        <%= f.input :content %>
        <%= f.submit "Add Review", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
  <div>
    <%= link_to "Back to restaurants", restaurants_path, class: "btn btn-primary" %>
  </div>
</div>